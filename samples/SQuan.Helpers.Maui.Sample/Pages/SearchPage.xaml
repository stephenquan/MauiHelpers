<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SQuan.Helpers.Maui.Sample.SearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SQuan.Helpers.Maui.Sample"
    Title="SearchPage"
    x:DataType="local:SearchPage">
    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout Padding="30,30,30,30" Spacing="25">
            <Entry Text="{Binding SearchText, Mode=TwoWay}" />
            <Button Clicked="OnSearchClicked" Text="Search" />
        </VerticalStackLayout>
        <Grid Grid.Row="1" Padding="30,0,30,30">
            <CollectionView ItemsSource="{Binding Results}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Null}">
                        <Grid Padding="0,5,0,5">
                            <Label Text="{Binding [title]}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>